<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="16dp"
    android:fontFamily="sans-serif"
    >

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv"
        card_view:cardElevation="5dp"
        card_view:cardCornerRadius="10dp"
        >

        <FrameLayout
            android:background="#319190"
            android:layout_width="4dp"
            android:layout_height="match_parent">

        </FrameLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/closeprd_img"
                android:src="@drawable/pone"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/closeprd_name"
                android:textStyle="bold"
                android:layout_alignTop="@+id/closeprd_img"
                android:layout_toRightOf="@+id/closeprd_img"
                android:layout_toEndOf="@+id/closeprd_img"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/closeprd_desc"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/closeprd_name"
                android:layout_alignStart="@+id/closeprd_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/bstatus"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <!-- <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/awarded" />


            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:text="Empty Products"
                 android:id="@+id/clsdempty"
                 android:layout_centerVertical="true"
                 android:layout_toRightOf="@+id/closeprd_img"
                 android:layout_toEndOf="@+id/closeprd_img" />-->


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prdstatus"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>